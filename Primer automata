/*Acepta igual cantidad de "a" y "b"
*/

#include
#include

using namespace std;
stack pila;

int mover(int estado , char simbolo)
{
if( estado == 1 && simbolo == 'a' )
{
pila.push('A');
return 1;
}

if( estado == 1 && simbolo == 'b' )
   {
    pila.pop();
    return 2;
   } 
   
if( estado == 2 && simbolo == 'b' )
   {
    pila.pop();
    return 2;
   }      
return 0;
}

int scanner(char palabra[10] )
{
int i = 0;
int estado = 1; //estado inicial

while(palabra[i])
{
estado = mover(estado,palabra[i]);
i++;
}

if ( estado == 2 && pila.empty()) //estado final
return 1;

return 0;
}

int main()
{
system("color f0");
char palabra[10];

cout<<"\n\n\t\tIngrese Cadena : ";
gets(palabra);

if( scanner(palabra))
cout<<"\n\n\t\t\t Corecto !!! ";

else
cout<<" \n\n\t\t\t Error !!!!";

cout<<endl<<endl;

system("pause");
}
